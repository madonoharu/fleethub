{
  "name": "fleethub",
  "version": "0.0.1",
  "private": true,
  "license": "UNLICENSED",
  "author": "madono (https://github.com/MadonoHaru) <madonoharu@gmail.com>",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prebuild": "yarn build:utils & yarn build:core",
    "build": "yarn build:utils && yarn build:core && yarn build:site",
    "build:site": "yarn workspace @fleethub/site build",
    "build:core": "yarn workspace @fleethub/core build",
    "build:utils": "yarn workspace @fleethub/utils build",
    "site": "yarn workspace @fleethub/site",
    "core": "yarn workspace @fleethub/core",
    "dev": "yarn workspace @fleethub/site dev",
    "lint": "eslint --cache packages && yarn tscheck",
    "test": "yarn test:core",
    "test:core": "jest packages/core/src",
    "tscheck": "tsc --noEmit",
    "update:constants": "yarn ts-node scripts/updateConstants",
    "update:locales": "yarn ts-node scripts/updateLocales",
    "utils": "yarn workspace @fleethub/utils"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json}": "prettier --write"
  },
  "jest": {
    "moduleNameMapper": {
      "^lodash-es$": "lodash"
    },
    "preset": "ts-jest"
  },
  "devDependencies": {
    "@fleethub/utils": "*",
    "@types/fs-extra": "^9.0.11",
    "@types/google-spreadsheet": "^3.1.0",
    "@types/jest": "^26.0.22",
    "@types/lodash-es": "^4.17.4",
    "@types/node": "^14.14.41",
    "@types/signale": "^1.4.1",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "axios": "^0.21.1",
    "babel-jest": "^26.6.3",
    "cloudinary": "^1.25.1",
    "cross-env": "^7.0.3",
    "dotenv": "^8.2.0",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.2.0",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "expr-eval": "^2.0.2",
    "firebase-admin": "^9.6.0",
    "fs-extra": "^9.1.0",
    "google-spreadsheet": "^3.1.15",
    "got": "^11.8.2",
    "husky": "^4.3.8",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.6.3",
    "kc-tools": "^1.1.0",
    "ky": "^0.27.0",
    "lint-staged": "^10.5.4",
    "lodash-es": "^4.17.21",
    "prettier": "^2.2.1",
    "signale": "^1.4.0",
    "ts-jest": "^26.5.5",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "engines": {
    "npm": "Please use yarn"
  }
}
