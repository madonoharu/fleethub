{
  "compilerOptions": {
    "target": "ES2019",

    "lib": ["esnext", "dom"],
    "outDir": "",
    "newLine": "lf",
    "types": ["react", "@types/node"],
    "noImplicitReturns": true,

    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "jsx": "preserve"
  },
  "include": ["packages"],
  "exclude": ["node_modules", "**/dist", "**/lib", "**/esm"]
}
