{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["esnext", "dom"],
    "allowJs": true,
    "outDir": "",
    "jsx": "react",
    "noImplicitReturns": true,

    "esModuleInterop": true,
    "strict": true,
    "experimentalDecorators": true,

    "newLine": "lf",
    "types": ["react", "@types/node"]
  },
  "include": ["packages"],
  "exclude": ["node_modules", "**/dist", "**/lib", "**/esm"]
}
